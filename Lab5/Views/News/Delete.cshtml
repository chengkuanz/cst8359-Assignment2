@model Lab5.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete News</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>News</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.First().FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.First().FileName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.First().Url)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.News.First().Url" alt="Image for @Model.News.First().FileName" style="height:100px; width:100px;">
