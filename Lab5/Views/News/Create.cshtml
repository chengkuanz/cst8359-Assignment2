@model Lab5.Models.News
@{
    ViewData["Title"] = "Create";
    var sportClubId = (string)ViewContext.RouteData.Values["id"];
}

<h1>Upload</h1>

<h4>Upload an add for SportClub @Model.SportClub.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" asp-for="SportClubId" value="@sportClubId" />
            <div class="form-group">
                <label for="file">File</label>
                <input type="file" class="form-control" name="file" />
            </div>
            <div class="form-group">
                <button name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.SportClubId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}